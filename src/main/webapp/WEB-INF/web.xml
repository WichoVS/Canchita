<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Controllers.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Controllers.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cms</servlet-name>
        <servlet-class>Controllers.cms</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>newscheck</servlet-name>
        <servlet-class>Controllers.newscheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowNoticia</servlet-name>
        <servlet-class>Controllers.ShowNoticia</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NotciasCms</servlet-name>
        <servlet-class>Controllers.NotciasCms</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Validarnoticia</servlet-name>
        <servlet-class>Controllers.Validarnoticia</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NotiDeportes</servlet-name>
        <servlet-class>Controllers.NotiDeportes</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cms</servlet-name>
        <url-pattern>/cms</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newscheck</servlet-name>
        <url-pattern>/newscheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowNoticia</servlet-name>
        <url-pattern>/ShowNoticia</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NotciasCms</servlet-name>
        <url-pattern>/NotciasCms</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Validarnoticia</servlet-name>
        <url-pattern>/Validarnoticia</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NotiDeportes</servlet-name>
        <url-pattern>/NotiDeportes</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
